        <property name="jpaPropertyMap" ref="jpaPropertyMap"/>
        <property name="persistenceXmlLocation" value="classpath:/org/apache/hise/persistence.xml" />
        <property name="persistenceUnitName" value="org.apache.hise"/>
    </bean>

